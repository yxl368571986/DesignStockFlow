{
  "name": "startide-design",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run type-check && vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:analyze": "vite build --mode production && npm run analyze",
    "preview": "vite preview --port 4173",
    "preview:dist": "vite preview --outDir dist",
    "type-check": "vue-tsc --noEmit --skipLibCheck",
    "test": "node --max-old-space-size=8192 --expose-gc ./node_modules/vitest/vitest.mjs --run",
    "test:watch": "node --max-old-space-size=8192 --expose-gc ./node_modules/vitest/vitest.mjs",
    "test:coverage": "node --max-old-space-size=8192 --expose-gc ./node_modules/vitest/vitest.mjs --coverage",
    "test:ui": "node --max-old-space-size=8192 --expose-gc ./node_modules/vitest/vitest.mjs --ui",
    "test:batch": "node --max-old-space-size=4096 --expose-gc scripts/run-tests-batch.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "verify-env": "node scripts/verify-env.js",
    "clean": "rimraf dist node_modules/.vite",
    "analyze": "echo '请使用 vite-bundle-visualizer 或 rollup-plugin-visualizer 分析构建产物'",
    "prepare": "npm run verify-env",
    "prepare-deployment": "node scripts/prepare-deployment.js",
    "deploy:package": "npm run build:prod && npm run prepare-deployment"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "@tanstack/vue-virtual": "^3.13.13",
    "@types/qrcode": "^1.5.6",
    "@types/sortablejs": "^1.15.9",
    "axios": "^1.6.0",
    "axios-retry": "^4.0.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.0",
    "dompurify": "^3.0.0",
    "echarts": "^6.0.0",
    "element-plus": "^2.5.0",
    "isomorphic-dompurify": "^2.34.0",
    "js-cookie": "^3.0.5",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.0",
    "qrcode": "^1.5.4",
    "sortablejs": "^1.15.6",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "vue3-lazy": "^1.0.0-alpha.1",
    "vuedraggable": "^4.1.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/crypto-js": "^4.2.0",
    "@types/dompurify": "^3.0.5",
    "@types/js-cookie": "^3.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.0",
    "@types/nprogress": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/typescript-plugin": "^3.1.8",
    "autoprefixer": "^10.4.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.0",
    "fast-check": "^4.5.2",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "postcss": "^8.4.0",
    "postcss-px-to-viewport-8-plugin": "^1.2.5",
    "prettier": "^3.1.0",
    "sass-embedded": "^1.97.1",
    "tailwindcss": "^3.4.0",
    "terser": "^5.27.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^2.0.0",
    "workbox-window": "^7.0.0"
  }
}
