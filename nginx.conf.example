# ============================================================================
# Nginx 配置文件 - 星潮设计资源平台
# ============================================================================
# 
# 功能特性：
# - HTTPS/TLS 1.3 + HTTP/2 支持
# - 完整的安全响应头配置
# - 静态资源缓存策略
# - API反向代理
# - Gzip/Brotli压缩
# - 大文件上传支持（最大1000MB）
# - 限流和DDoS防护
# - PWA和Service Worker支持
# 
# 使用说明：
# 1. 复制此文件到 /etc/nginx/sites-available/startide-design
# 2. 修改域名、SSL证书路径、后端API地址
# 3. 创建软链接: ln -s /etc/nginx/sites-available/startide-design /etc/nginx/sites-enabled/
# 4. 测试配置: nginx -t
# 5. 重载配置: nginx -s reload
# 
# ============================================================================

# ==================== 上游服务器配置（后端API）====================
upstream api_backend {
    # 后端API服务器地址
    server 127.0.0.1:8080 max_fails=3 fail_timeout=30s;
    
    # 负载均衡配置（多服务器时启用）
    # server 127.0.0.1:8081 max_fails=3 fail_timeout=30s;
    # server 127.0.0.1:8082 max_fails=3 fail_timeout=30s backup;
    
    # 负载均衡策略
    # least_conn;  # 最少连接数
    # ip_hash;     # IP哈希（会话保持）
    # hash $request_uri consistent;  # 一致性哈希
    
    # HTTP/2连接复用优化
    keepalive 32;
    keepalive_timeout 60s;
    keepalive_requests 100;
}

# ==================== HTTP服务器 - 强制HTTPS重定向 ====================
server {
    listen 80;
    listen [::]:80;
    server_name startide-design.com www.startide-design.com;
    
    # 日志配置
    access_log /var/log/nginx/startide-design-http-access.log combined;
    error_log /var/log/nginx/startide-design-http-error.log warn;
    
    # Let's Encrypt验证（ACME Challenge）
    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root /var/www/letsencrypt;
        allow all;
    }
    
    # 其他所有请求强制HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS服务器 - 主配置（启用HTTP/2）
server {
    # 启用HTTP/2协议
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name startide-design.com www.startide-design.com;
    
    # 网站根目录
    root /var/www/startide-design/dist;
    index index.html;
    
    # 字符集
    charset utf-8;
    
    # ==================== HTTP/2优化配置 ====================
    # HTTP/2推送关键资源（可选）
    # http2_push /assets/main.css;
    # http2_push /assets/main.js;
    
    # HTTP/2最大并发流
    http2_max_concurrent_streams 128;
    
    # HTTP/2推送预加载
    http2_push_preload on;
    
    # ==================== SSL/TLS证书配置 ====================
    # SSL证书文件路径（需要替换为实际路径）
    ssl_certificate /etc/nginx/ssl/startide-design.com.crt;
    ssl_certificate_key /etc/nginx/ssl/startide-design.com.key;
    
    # 证书链（可选，推荐配置）
    # ssl_trusted_certificate /etc/nginx/ssl/startide-design.com.chain.pem;
    
    # SSL协议版本（仅支持TLS 1.2和1.3）
    ssl_protocols TLSv1.2 TLSv1.3;
    
    # 加密套件（优先使用强加密算法）
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;  # TLS 1.3推荐关闭
    
    # SSL会话缓存（提升TLS握手性能）
    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;  # 安全考虑，建议关闭
    
    # OCSP Stapling（在线证书状态协议装订）
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    
    # Diffie-Hellman参数（增强安全性）
    # 生成命令: openssl dhparam -out /etc/nginx/ssl/dhparam.pem 2048
    ssl_dhparam /etc/nginx/ssl/dhparam.pem;
    
    # ==================== 连接优化 ====================
    # TCP优化
    tcp_nodelay on;
    tcp_nopush on;
    
    # Keepalive连接
    keepalive_timeout 65;
    keepalive_requests 100;
    
    # ==================== 安全响应头配置 ====================
    # HSTS - 强制HTTPS（2年，包含子域名，预加载）
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    
    # 防止点击劫持攻击
    add_header X-Frame-Options "DENY" always;
    
    # 防止MIME类型嗅探
    add_header X-Content-Type-Options "nosniff" always;
    
    # XSS防护（现代浏览器已弃用，但保留兼容性）
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Referrer策略（保护用户隐私）
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # 权限策略（限制浏览器功能访问）
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()" always;
    
    # CSP内容安全策略（防止XSS攻击）
    # 注意：根据实际使用的CDN和第三方服务调整
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://api.startide-design.com wss://api.startide-design.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;" always;
    
    # 移除服务器版本信息（安全加固）
    server_tokens off;
    more_clear_headers 'Server';
    more_clear_headers 'X-Powered-By';
    
    # ==================== Gzip压缩配置 ====================
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/rss+xml
        font/truetype
        font/opentype
        application/vnd.ms-fontobject
        image/svg+xml;
    gzip_min_length 1000;
    gzip_disable "msie6";
    
    # ==================== Brotli压缩配置（可选）====================
    # 需要安装 ngx_brotli 模块
    # brotli on;
    # brotli_comp_level 6;
    # brotli_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss;
    
    # ==================== 日志配置 ====================
    # 定义详细日志格式（包含性能指标）
    log_format detailed '$remote_addr - $remote_user [$time_local] '
                        '"$request" $status $body_bytes_sent '
                        '"$http_referer" "$http_user_agent" '
                        '$request_time $upstream_response_time '
                        '$pipe $connection $connection_requests '
                        '"$http_x_forwarded_for"';
    
    # 访问日志（使用详细格式）
    access_log /var/log/nginx/startide-design-access.log detailed;
    
    # 错误日志（warn级别，生产环境推荐）
    error_log /var/log/nginx/startide-design-error.log warn;
    
    # ==================== 文件上传配置（支持大文件）====================
    # 最大上传文件大小（1000MB）
    client_max_body_size 1000M;
    
    # 客户端请求体缓冲区大小
    client_body_buffer_size 256k;
    
    # 客户端请求体超时时间（5分钟）
    client_body_timeout 300s;
    
    # 客户端请求头超时时间
    client_header_timeout 60s;
    
    # 发送响应超时时间
    send_timeout 300s;
    
    # 临时文件路径（大文件上传时使用）
    client_body_temp_path /var/nginx/client_body_temp 1 2;
    
    # ==================== 静态资源缓存策略 ====================
    
    # HTML文件 - 不缓存（always revalidate）
    location ~* \.html$ {
        add_header Cache-Control "no-cache, no-store, must-revalidate" always;
        add_header Pragma "no-cache" always;
        add_header Expires "0" always;
        try_files $uri $uri/ /index.html;
    }
    
    # JavaScript和CSS文件 - 长期缓存（1年）
    # 使用文件名哈希，可以安全地长期缓存
    location ~* \.(js|css)$ {
        add_header Cache-Control "public, max-age=31536000, immutable" always;
        expires 1y;
        access_log off;
        try_files $uri =404;
    }
    
    # 图片文件 - 长期缓存（30天）
    location ~* \.(jpg|jpeg|png|gif|ico|svg|webp)$ {
        add_header Cache-Control "public, max-age=2592000" always;
        expires 30d;
        access_log off;
        try_files $uri =404;
    }
    
    # 字体文件 - 长期缓存（1年）
    location ~* \.(woff|woff2|ttf|otf|eot)$ {
        add_header Cache-Control "public, max-age=31536000, immutable" always;
        add_header Access-Control-Allow-Origin "*" always;
        expires 1y;
        access_log off;
        try_files $uri =404;
    }
    
    # 其他静态资源 - 中期缓存（7天）
    location ~* \.(pdf|txt|xml|json)$ {
        add_header Cache-Control "public, max-age=604800" always;
        expires 7d;
        access_log off;
        try_files $uri =404;
    }
    
    # ==================== API反向代理配置 ====================
    location /api/ {
        # 代理到后端服务器
        proxy_pass http://api_backend/;
        
        # 代理请求头配置
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # WebSocket支持（如需要）
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        
        # 缓冲设置
        proxy_buffering on;
        proxy_buffer_size 8k;
        proxy_buffers 16 8k;
        proxy_busy_buffers_size 16k;
        proxy_temp_file_write_size 16k;
        
        # 禁用API响应缓存（动态内容）
        add_header Cache-Control "no-cache, no-store, must-revalidate" always;
        add_header Pragma "no-cache" always;
        add_header Expires "0" always;
        
        # 错误处理
        proxy_intercept_errors on;
        error_page 502 503 504 /50x.html;
        
        # 限流配置（防止API滥用）
        limit_req zone=api_limit burst=20 nodelay;
        limit_conn conn_limit 10;
        
        # API专用访问日志（记录详细信息）
        access_log /var/log/nginx/startide-design-api.log detailed;
    }
    
    # 文件上传API（单独配置，更宽松的限流）
    location /api/upload/ {
        proxy_pass http://api_backend/upload/;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 上传专用超时设置（更长）
        proxy_connect_timeout 60s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        # 禁用缓冲（流式上传）
        proxy_buffering off;
        proxy_request_buffering off;
        
        # 上传限流（每秒2个请求）
        limit_req zone=upload_limit burst=5 nodelay;
    }
    
    # ==================== CDN资源代理（可选）====================
    # 如果使用CDN，可以配置CDN资源的代理
    location /cdn/ {
        proxy_pass https://cdn.startide-design.com/;
        proxy_cache cdn_cache;
        proxy_cache_valid 200 30d;
        proxy_cache_valid 404 1m;
        add_header X-Cache-Status $upstream_cache_status;
    }
    
    # ==================== Service Worker ====================
    # Service Worker文件不缓存
    location = /sw.js {
        add_header Cache-Control "no-cache, no-store, must-revalidate" always;
        add_header Pragma "no-cache" always;
        add_header Expires "0" always;
        add_header Service-Worker-Allowed "/" always;
        try_files $uri =404;
    }
    
    location = /workbox-*.js {
        add_header Cache-Control "no-cache, no-store, must-revalidate" always;
        add_header Pragma "no-cache" always;
        add_header Expires "0" always;
        try_files $uri =404;
    }
    
    # ==================== PWA Manifest ====================
    location = /manifest.json {
        add_header Cache-Control "public, max-age=86400" always;
        add_header Content-Type "application/manifest+json" always;
        try_files $uri =404;
    }
    
    # ==================== 根路径和SPA路由 ====================
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # ==================== 错误页面 ====================
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
    
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        internal;
    }
    
    # ==================== 禁止访问隐藏文件 ====================
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # ==================== 禁止访问备份文件 ====================
    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# ==================== 缓存配置（全局）====================
# 定义缓存路径和参数
proxy_cache_path /var/cache/nginx/api levels=1:2 keys_zone=api_cache:10m max_size=100m inactive=60m use_temp_path=off;
proxy_cache_path /var/cache/nginx/cdn levels=1:2 keys_zone=cdn_cache:10m max_size=1g inactive=30d use_temp_path=off;

# 缓存键定义
proxy_cache_key "$scheme$request_method$host$request_uri";

# ==================== 限流配置（防止DDoS）====================
# 限制请求频率（每秒10个请求）
limit_req_zone $binary_remote_addr zone=api_limit:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=upload_limit:10m rate=2r/s;

# 限制连接数（每个IP最多10个连接）
limit_conn_zone $binary_remote_addr zone=conn_limit:10m;

