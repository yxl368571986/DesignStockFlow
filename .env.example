# ============================================
# 环境变量模板 (.env.example)
# ============================================
# 这是环境变量配置模板文件
# 使用说明：
# 1. 复制此文件为 .env.development（开发环境）或 .env.production（生产环境）
# 2. 根据实际情况修改配置项的值
# 3. 不要将包含敏感信息的 .env 文件提交到版本控制系统

# --------------------------------------------
# 应用基础配置
# --------------------------------------------
# 应用标题（显示在浏览器标签页）
VITE_APP_TITLE=星潮设计

# 应用版本号
VITE_APP_VERSION=1.0.0

# 运行环境标识（development/production/staging）
VITE_APP_ENV=development

# --------------------------------------------
# API配置
# --------------------------------------------
# API基础URL（后端接口地址）
# 开发环境示例: http://localhost:3000/api/v1
# 生产环境示例: https://api.startide-design.com/api/v1
VITE_API_BASE_URL=http://localhost:3000/api/v1

# API请求超时时间（毫秒）
VITE_API_TIMEOUT=10000

# --------------------------------------------
# CDN配置
# --------------------------------------------
# CDN基础URL（静态资源地址）
# 开发环境示例: http://localhost:3000
# 生产环境示例: https://cdn.startide-design.com
VITE_CDN_BASE_URL=http://localhost:3000

# 图片CDN地址（可选，不填则使用CDN_BASE_URL）
VITE_IMAGE_CDN_URL=http://localhost:3000/uploads

# --------------------------------------------
# 文件上传配置
# --------------------------------------------
# 单个文件最大大小（字节）
# 1000MB = 1048576000字节
VITE_MAX_FILE_SIZE=1048576000

# 分片上传的分片大小（字节）
# 10MB = 10485760字节（建议5-20MB之间）
VITE_CHUNK_SIZE=10485760

# 分片上传阈值（字节）
# 超过此大小启用分片上传，100MB = 104857600字节
VITE_CHUNK_THRESHOLD=104857600

# 支持的文件格式（逗号分隔，不要有空格）
VITE_ALLOWED_FILE_TYPES=PSD,AI,CDR,EPS,SKETCH,XD,FIGMA,SVG,PNG,JPG,JPEG,WEBP

# --------------------------------------------
# 功能开关
# --------------------------------------------
# 是否启用Mock数据
# true: 使用本地Mock数据，false: 使用真实API
VITE_ENABLE_MOCK=false

# 是否启用PWA功能
# true: 启用离线缓存和应用安装，false: 禁用PWA
VITE_ENABLE_PWA=false

# 是否启用调试模式
# true: 显示详细日志和调试信息，false: 关闭调试
VITE_ENABLE_DEBUG=true

# 是否显示性能监控
# true: 显示性能指标，false: 关闭性能监控
VITE_ENABLE_PERFORMANCE=true

# 是否启用错误追踪
# true: 捕获并上报错误，false: 仅本地记录
VITE_ENABLE_ERROR_TRACKING=true

# --------------------------------------------
# 安全配置
# --------------------------------------------
# CSRF防护 - 允许的请求来源（多个用逗号分隔，不要有空格）
# 开发环境示例: http://localhost:5173,http://localhost:3000,http://localhost:8080
# 生产环境示例: https://www.startide-design.com,https://startide-design.com
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Token存储方式
# cookie: 使用HttpOnly Cookie（推荐，更安全）
# localStorage: 使用localStorage（不推荐，易受XSS攻击）
VITE_TOKEN_STORAGE=cookie

# Token过期时间（天）
VITE_TOKEN_EXPIRE_DAYS=7

# --------------------------------------------
# 缓存配置
# --------------------------------------------
# 资源列表缓存时间（分钟）
VITE_CACHE_RESOURCE_LIST=5

# 网站配置缓存时间（分钟）
VITE_CACHE_SITE_CONFIG=30

# 分类列表缓存时间（分钟）
VITE_CACHE_CATEGORIES=10

# --------------------------------------------
# 第三方服务配置
# --------------------------------------------
# 微信登录AppID
# 申请地址: https://open.weixin.qq.com/
VITE_WECHAT_APP_ID=

# 支付宝AppID
# 申请地址: https://open.alipay.com/
VITE_ALIPAY_APP_ID=

# --------------------------------------------
# 日志配置
# --------------------------------------------
# 日志级别（debug/info/warn/error）
# debug: 显示所有日志
# info: 显示信息、警告和错误
# warn: 显示警告和错误
# error: 仅显示错误
VITE_LOG_LEVEL=debug

# 是否上报日志到服务器
# true: 上报到服务器，false: 仅本地记录
VITE_LOG_REPORT=false

# 日志上报地址（仅在VITE_LOG_REPORT=true时有效）
VITE_LOG_REPORT_URL=https://api.startide-design.com/api/log/report

# --------------------------------------------
# 监控配置
# --------------------------------------------
# 监控日志上报接口
# 开发环境示例: http://localhost:3000/api/v1/monitor/report
# 生产环境示例: https://api.startide-design.com/api/v1/monitor/report
VITE_MONITOR_URL=http://localhost:3000/api/v1/monitor/report

# 是否在开发环境启用监控
# true: 开发环境也启用监控，false: 仅生产环境启用
VITE_ENABLE_MONITOR_IN_DEV=false

# 监控采样率（0-1，1表示100%采样）
# 开发环境建议: 0.1（10%采样）
# 生产环境建议: 1.0（100%采样）
VITE_MONITOR_SAMPLE_RATE=1.0

# ============================================
# 配置说明
# ============================================
# 
# 1. 环境变量命名规范：
#    - 所有环境变量必须以 VITE_ 开头（Vite要求）
#    - 使用大写字母和下划线命名（UPPER_SNAKE_CASE）
#    - 变量名要清晰表达含义
#
# 2. 环境变量使用方式：
#    - 在代码中通过 import.meta.env.VITE_XXX 访问
#    - 例如: const apiUrl = import.meta.env.VITE_API_BASE_URL
#
# 3. 安全注意事项：
#    - 不要在环境变量中存储敏感密钥（如私钥、密码）
#    - 前端环境变量会被打包到代码中，用户可见
#    - 敏感配置应该放在后端，前端通过API获取
#
# 4. 环境切换：
#    - npm run dev: 使用 .env.development
#    - npm run build: 使用 .env.production
#    - 可以通过 --mode 参数指定其他环境
#
# 5. 调试技巧：
#    - 在浏览器控制台输入 import.meta.env 查看所有环境变量
#    - 确保变量名拼写正确，区分大小写
#    - 修改环境变量后需要重启开发服务器
#
# ============================================
